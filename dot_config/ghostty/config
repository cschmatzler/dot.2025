command = /opt/homebrew/bin/nu --config ~/.config/nushell/config.nu
theme = catppuccin-latte
window-padding-x = 8
window-padding-y = 2
window-padding-balance = true
font-family = Iosevka Nerd Font
font-size = 15.5
font-feature = -calt
font-feature = -dlig
cursor-style = block
mouse-hide-while-typing = true
mouse-scroll-multiplier = 1.25
shell-integration = detect
shell-integration-features = no-cursor
keybind = global:ctrl+shift+space=toggle_quick_terminal

keybind = shift+enter=text:\n

# Custom keybindings
# Control+Number opens tab with the number
keybind = ctrl+one=goto_tab:1
keybind = ctrl+two=goto_tab:2
keybind = ctrl+three=goto_tab:3
keybind = ctrl+four=goto_tab:4
keybind = ctrl+five=goto_tab:5
keybind = ctrl+six=goto_tab:6
keybind = ctrl+seven=goto_tab:7
keybind = ctrl+eight=goto_tab:8
keybind = ctrl+nine=goto_tab:9

# Control+Arrow left/right chooses tab to left and right
keybind = ctrl+left=previous_tab
keybind = ctrl+right=next_tab

# Control+H/L chooses tab to left and right (vim style)
keybind = ctrl+h=previous_tab
keybind = ctrl+l=next_tab

# Control+M/I chooses tab to left and right (colemak style)
keybind = ctrl+m=previous_tab
keybind = ctrl+i=next_tab

# Control+Shift+Arrow left/right chooses pane to left and right
keybind = ctrl+shift+left=goto_split:left
keybind = ctrl+shift+right=goto_split:right

# Control+Shift+H/J/K/L chooses pane in vim directions
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+j=goto_split:down
keybind = ctrl+shift+k=goto_split:up
keybind = ctrl+shift+l=goto_split:right

# Control+Shift+Enter splits to the right
keybind = ctrl+shift+enter=new_split:right

# Control+Shift+W closes current pane
keybind = ctrl+shift+w=close_surface
