command = /opt/homebrew/bin/fish
theme = tokyonight-day
window-padding-x = 8
window-padding-y = 2
window-padding-balance = true
font-family = Iosevka Nerd Font
font-size = 15.5
font-feature = -calt
font-feature = -dlig
cursor-style = block
mouse-hide-while-typing = true
mouse-scroll-multiplier = 1.25
shell-integration = fish
shell-integration-features = no-cursor
keybind = global:ctrl+shift+space=toggle_quick_terminal

keybind = shift+enter=text:\n

# Custom keybindings
# Command+Shift+Number opens tab with the number
keybind = super+shift+one=goto_tab:1
keybind = super+shift+two=goto_tab:2
keybind = super+shift+three=goto_tab:3
keybind = super+shift+four=goto_tab:4
keybind = super+shift+five=goto_tab:5
keybind = super+shift+six=goto_tab:6
keybind = super+shift+seven=goto_tab:7
keybind = super+shift+eight=goto_tab:8
keybind = super+shift+nine=goto_tab:9

# Command+Shift+Arrow left/right chooses tab to left and right
keybind = super+shift+left=previous_tab
keybind = super+shift+right=next_tab

# Control+Shift+Arrow left/right chooses pane to left and right
keybind = ctrl+shift+left=goto_split:left
keybind = ctrl+shift+right=goto_split:right

# Control+Shift+Enter splits to the right
keybind = ctrl+shift+enter=new_split:right

# Control+Shift+W closes current pane
keybind = ctrl+shift+w=close_surface
